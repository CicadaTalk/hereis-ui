page {
  width: 100%;
  height: 100%;
}

/* ====== 按钮 ====== */
.button-wrapper {
  position: fixed;
  bottom: 20px;
  right: 5px;
  width: 50px;
  height: 50px;
}

.button-wrapper-map {
  position: fixed;
  bottom: 70px;
  right: 5px;
  width: 50px;
  height: 50px;
}

.button {
  position: relative;
  height: 40px;
  width: 40px;
  border-radius: 50%;
  box-shadow: 1px 1px 3px darkgrey;
  background-color: white;
}

.button-img {
  padding-top: 5px;
  padding-left: 5px;
  width: 30px;
  height: 30px;
}