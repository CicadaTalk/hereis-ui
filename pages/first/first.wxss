page {
  background-image: url("https://hereis-1252733783.cos.ap-chengdu.myqcloud.com/cat.jpg");
  background-size: cover;
}

.container {
}

.wrapper {
  /* 定位于屏幕底部 */
  position: absolute;
  left: 0px;
  bottom: 0px;

  width: 100%;
}

.intro::before {
  content: ""; /* 用于显示背景 */
  /* 固定于父容器底部 */
  position: absolute;
  left: 0px;
  bottom: 0px;

  /* 铺满父容器 */
  width: 100%;
  height: 100%; 
  
  /* TODO: 微调颜色 */
  background-color: rgba(64, 64, 64, 0.5);
}

.intro {
  position: relative; /* 令文字在背景上 */
  /* TODO: 微调颜色 */
  color: rgba(255,255,255,1);
}

.blur-bg {
  /* 固定于父容器底部 */
  position: absolute;
  left: 0px;
  bottom: 0px;

  /* 铺满父容器 */
  width: 100%;
  height: 100%; 

  /* 毛玻璃效果 */
  background-attachment: fixed;
  background-image: url("https://hereis-1252733783.cos.ap-chengdu.myqcloud.com/cat.jpg");
  background-size: cover;
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -ms-filter: blur(5px);
  -o-filter: blur(5px);
  filter: blur(5px);
}