/* pages/intro/intro.wxss */

@import "../scenicdetail/scenicdetail.wxss";

page {
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}

.wrapper {
  width: 100%;
  height: 100%;
}

.placeholder-title{
  color: #FFF;
}

.placeholder-brief{
  color: #EEE;
}

/* ======内容====== */
.content-wrapper {
  width: 100%;
  height: 100%;
}

/* ======背景====== */
.background-wrapper {
  /* 使wrapper贴合图片 */
  display: flex;
  position: relative;
  /* 固定背景图片 */
  z-index: 10;
  overflow-x: hidden;
}

/* ======简介====== */
.brief-intro-wrapper {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 100;
  padding-top: 10px;
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 10px;
   background-image: linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,0.8)); 
}

.title {
  color: #FFF; /* TODO: 微调 */
  font-size: 17pt;
  border: 1px solid gainsboro;
  border-top-width: 0px;
  border-right-width: 0px; 
  border-bottom-width: 1px;
  border-left-width: 0px;
}

.brief-intro {
  color: #EEE; /* TODO: 微调 */
  font-size: 11pt;
  width: 90%;
  border: 1px solid gainsboro;
  border-top-width: 0px;
  border-right-width: 0px; 
  border-bottom-width: 1px;
  border-left-width: 0px;
  margin-top: 5px;
}

.info-wrapper {
  position: relative;
  z-index: 100;
  border-radius: 20px;  
}

.detail-intro-input {
  border: 1px solid gainsboro;
  border-radius: 5px;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.detail-activity {
  margin-bottom: 10px;
}

.detail-activity-name {
  display: flex;
  flex-direction: row;
  padding-top: 5px;
  padding-bottom: 5px;
}

.detail-activity-button {
  display: flex;
  flex-direction: row-reverse;

  margin-top: 10px;
  margin-bottom: 10px;
}

.detail-activity-picker {
  background: whitesmoke;
  padding: 5px;

  display: flex;
  flex-direction: row;
}

.spot-brief-border {
  border: 1px solid gainsboro;
  margin: 5px;
  border-radius: 5px;
}

.save {
  margin: 10px;
}