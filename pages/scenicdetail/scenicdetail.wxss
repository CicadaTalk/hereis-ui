.detail {
  height: auto;
  /* 设置间隔 */
  margin-top: 10px;
  /* 设置字体  */
  font-family: Arial, Helvetica, sans-serif;
  font-size: 17px;
}

.detailintro {
  /* background: white; */
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 5px;
  padding-bottom: 5px;
}

.detailTitle {
  font-size: 20px;
}

.detailTitle::before {
  position: absolute;
  left: 0;
  background-color: black;
  color: rgba(0, 0, 0, 0);
  content: "1";
  width: 6px;
  margin-right: 15px;
}

.activity_content {
  /* background: white; */
