/* pages/intro/intro.wxss */

@import "../scenicdetail/scenicdetail.wxss";
@import "../restaurant/restaurant.wxss"; 

page {
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}

.wrapper {
  width: 100%;
  height: 100%;
}

/* ======内容====== */
.content-wrapper {
  width: 100%;
  height: 100%;
  overflow: scroll;
}

/* ======背景====== */
.background-wrapper {
  width: 100%;
  /* 使wrapper贴合图片 */
  display: flex;
  position: relative;
  /* 固定背景图片 */
  z-index: 10;
}

.background-wrapper>image {
  width: 100%; 
}

/* ======简介====== */
.brief-intro-wrapper {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 100;
  padding-top: 10px;
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 10px;
  background-image: linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,0.8));
}

.title {
  color: #FFF; /* TODO: 微调 */
  font-size: 17pt;
}

.brief-intro {
  color: #EEE; /* TODO: 微调 */
  font-size: 11pt;
}

.info-wrapper {
  position: relative;
  z-index: 100;
  border-radius: 20px;  
}

/* ====== 按钮 ====== */
.button-wrapper {
  position: fixed;
  bottom: 20px;
  right: 0px;
  width: 40px;
}

.button {
  position: relative;
  left: -10px;
  height: 30px;
  width: 30px;
  border-radius: 50%;
  box-shadow: 1px 1px 3px darkgrey;
  background-color: white;
}

.button-img {
  padding-top: 5px;
  padding-left: 5px;
  width: 20px;
  height: 20px;
}