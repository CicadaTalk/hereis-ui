/* pages/inputmenu/inputmenu.wxss */
.page {
  height: 100%;
  width: 100%;
}

.wrapper {
  padding: 10px;
}

.border {
  border: 1px solid gainsboro;
  margin: 5px;
}

.detail-menu {
  padding: 10px;
}

.detail-menu-name {
  display: flex;
  flex-direction: row;
}

.detail-menu-content {
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}

.menu-image {
  height: 80px;
  width: 80px;
}

.menu-content {
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.menu-content- {
  display: flex;
  flex-direction: row;
  padding-left: 5px;
}

.add-menu-button {
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}